# This file is generated by Chef for <%= node['fqdn'] %>
<% if node['postfix']['main']['smtp_sender_dependent_authentication'] == "yes" -%>
<% unless node['postfix']['sasl_smtp_sender_dependent_authentication_maps'].empty? -%>
  <% node['postfix']['sasl_smtp_sender_dependent_authentication_maps'].each do |key,value| -%>
<%= "#{value['relay']} #{key}:#{value['password']}"  %>
  <% end -%>
<% end -%>
<% else %>
<%= node['postfix']['main']['relayhost'] %> <%= @settings['smtp_sasl_user_name'] %>:<%= @settings['smtp_sasl_passwd'] %>
<% end -%>
